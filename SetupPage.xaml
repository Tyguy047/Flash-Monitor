<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flash_Monitor.SetupPage"
             NavigationPage.HasNavigationBar="False">
       
       <ContentPage.Content>
        
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
            
            <Label Text="Welcome to Flash Monitor!"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level1"
                   HorizontalTextAlignment="Center"/>
            
            <Label Text="Flash Monitor is an Open Source alternative to the official Flash Maker app."
                   FontSize="16"
                   HorizontalTextAlignment="Center" />
            
            <Label Text="To get started, enter your Flash Forge 3D printer's IP address..."
                   FontSize="16" />
            
            <Entry
                   x:Name="NameEntry"
                   Placeholder="e.g. A Fun Name For Your Printer..."
                   />
            
            <Entry
                   x:Name="IpEntry"
                   Placeholder="e.g. 192.168.0.1"
                   Keyboard="Url" />
            
            <Button Text="Set &amp; Continue"
                    Clicked="OnSaveClicked" />
            
            <Label Text="Why does the Flash Monitor app need this?" FontSize="22" />
            <Label Text="While the official Flash Maker app is able to connect to your printer using your Flash Forge account, we want to respect your privacy and not force you to create an account to monitor a device you own."
                   FontSize="16" />
            
        </VerticalStackLayout>
        
    </ContentPage.Content>
</ContentPage>